  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "paths": {
      "@seed/button": [
        "./projects/seeds/src/lib/components/button/public-api.ts"
      ],
      "@seed/checkbox": [
        "./projects/seeds/src/lib/components/checkbox/public-api.ts"
      ],
      "@seed/form-field": [
        "./projects/seeds/src/lib/components/form-field/public-api.ts"
      ],
      "@seed/icon": ["./projects/seeds/src/lib/components/icon/public-api.ts"],
