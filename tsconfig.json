        "./projects/seeds/src/lib/components/input/public-api.ts"
      ],
      "@seed/pagination": [
        "./projects/seeds/src/lib/components/pagination/public-api.ts"
      ],
      "@seed/menu": ["./projects/seeds/src/lib/components/menu/public-api.ts"],
      "@seed/typography": ["./projects/seeds/src/lib/typography/public-api.ts"],
      "@seed/utils": ["./projects/seeds/src/lib/utils/public-api.ts"],
      "@seed/models": ["./projects/seeds/src/lib/models/public-api.ts"]
    },
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/seeds/tsconfig.lib.json"
    },
    {
      "path": "./projects/seeds/tsconfig.spec.json"
